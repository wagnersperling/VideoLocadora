@model IEnumerable<VideoLocadora.Models.Movie>

@{
    ViewBag.Title = "Filmes";
}

@using (Html.BeginForm("Delete", "Movie", FormMethod.Get))
{
    <div class="container">
        <h2>Lista de filmes</h2>
        @Html.ValidationSummary(true)
        <table class="table">
            <tbody>
                <tr>
                <tr>
                    <th>
                        <label>Nome</label>
                    </th>
                    <th>
                        <label>Data de criação</label>
                    </th>
                    <th>
                        <label>Ativo</label>
                    </th>
                    <th>
                        <label>Genero</label>
                    </th>
                    <th>
                        <label>Alterar</label>
                    </th>
                    <th>
                        <label>Excluir</label>
                    </th>
                </tr>

                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                <tr>
                    <td>
                        <label for="@item.Name">@item.Name </label>
                    </td>
                    <td>
                        <label for="@item.CreationDate">@item.CreationDate.ToString("dd-MM-yyyy") </label>
                    </td>
                    <td>
                        <label for="@item.Active"> @item.Active</label>
                    </td>
                    <td>
                        <label for="@item.Genre.Name"> @item.Genre.Name</label>
                    </td>
                    <td>
                        @Html.ActionLink("Alterar", "Update", "Movie", new { @Id = item.Id }, null)
                    </td>
                    <td>
                        <input type="checkbox"
                               name="Id"
                               value="@item.Id" id="@item.Id" />
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
        @Html.ActionLink("Cadastro de Filme", "Insert", "Movie", new { @class = "btn btn-default" })
        <input type="submit" value="Excluir" class="btn btn-default" />
    </div>

}